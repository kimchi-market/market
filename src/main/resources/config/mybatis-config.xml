<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="xmlconfig/connection-info.properties"/>
    <typeAliases>
        <typeAlias type="ken.market.domain.Member" alias="Member"/>
        <typeAlias type="ken.market.domain.Post" alias="Post"/>
        <typeAlias type="ken.market.domain.Review" alias="Review"/>
    </typeAliases>

    <environments default="dev">
        <environment id="dev">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="section01/xmlconfig/member-mapper.xml"/>
    </mappers>
</configuration>